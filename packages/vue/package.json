{
  "name": "@qrgrid/vue",
  "version": "0.1.0",
  "type": "module",
  "module": "src/index.ts",
  "main": "src/index.ts",
  "private": false,
  "description": "The Ultimate Customizable QR Code JavaScript Library QR Grid for vue",
  "license": "MIT",
  "bugs": "https://github.com/yadav-saurabh/qrgrid/issues",
  "repository": {
    "type": "git",
    "url": "https://github.com/yadav-saurabh/qrgrid",
    "directory": "packages/vue"
  },
  "keywords": [
    "qr",
    "styling",
    "qrgrid",
    "typescript",
    "vue",
    "vue3"
  ],
  "files": [
    "/dist"
  ],
  "exports": {
    ".": "./src/index.ts",
    "./canvas": "./src/canvas/index.ts",
    "./svg": "./src/svg/index.ts"
  },
  "scripts": {
    "build": "npm run clean && rollup -c && npm run cp:license && npm run mod:pkg",
    "clean": "rimraf ./dist",
    "cp:license": "cp ../../LICENSE ./LICENSE",
    "mod:pkg": "node ./scripts/modify-package.mjs",
    "type-check": "vue-tsc --noEmit",
    "tsc:build": "vue-tsc -b"
  },
  "dependencies": {
    "@qrgrid/core": "*"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^26.0.1",
    "@rollup/plugin-typescript": "^11.1.6",
    "@vitejs/plugin-vue": "^5.1.2",
    "rimraf": "^6.0.1",
    "rollup": "^4.19.1",
    "typescript": "^5.2.2",
    "vite": "^5.3.5",
    "vue-tsc": "^2.0.24"
  },
  "peerDependencies": {
    "vue": "*"
  },
  "publishConfig": {
    "access": "public"
  }
}
