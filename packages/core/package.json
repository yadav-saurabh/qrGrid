{
  "name": "@qrgrid/core",
  "module": "src/index.ts",
  "main": "src/index.ts",
  "type": "module",
  "description": "qrgrid qr code generation library",
  "license": "MIT",
  "bugs": "https://github.com/yadav-saurabh/qrgrid/issues",
  "repository": {
    "type": "git",
    "url": "https://github.com/yadav-saurabh/qrgrid",
    "directory": "packages/core"
  },
  "keywords": [
    "qr",
    "qrgrid",
    "typescript"
  ],
  "scripts": {
    "build": "tsc -b && npm run cp:license && npm run cp:jsr && npm run cp:readme",
    "cp:license": "cp ../../LICENSE ./dist/LICENSE",
    "cp:jsr": "cp ./jsr.json ./dist/jsr.json",
    "cp:readme": "cp ./README.md ./dist/README.md",
    "dev": "tsc -w"
  }
}
